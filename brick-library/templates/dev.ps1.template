<#
.SYNOPSIS
Generated by CustomERP - Development Helper Script for Windows

.DESCRIPTION
Usage: .\dev.ps1 [command]

Commands:
  start       Start all services (Docker)
  stop        Stop all services
  logs        View logs
  clean       Remove containers and volumes
  help        Show this help message
#>

param (
    [string]$Command = "help"
)

switch ($Command) {
    "start" {
        Write-Host "Starting {{projectId}}..." -ForegroundColor Green
        docker compose up -d --build
        Write-Host ""
        Write-Host "Backend: http://localhost:3000" -ForegroundColor Cyan
        Write-Host "Frontend: http://localhost:5173" -ForegroundColor Cyan
    }
    "stop" {
        Write-Host "Stopping services..." -ForegroundColor Yellow
        docker compose down
    }
    "logs" {
        docker compose logs -f
    }
    "clean" {
        Write-Host "Cleaning up..." -ForegroundColor Red
        docker compose down -v
    }
    "help" {
        Get-Help $MyInvocation.MyCommand.Path -Detailed
    }
    Default {
        Write-Error "Unknown command: $Command"
        Write-Host "Run '.\dev.ps1 help' for usage."
    }
}

