# ================================
# CustomERP Backend - Development
# ================================
FROM node:20-alpine

WORKDIR /app

# Install dependencies (including dev)
COPY package*.json ./
RUN npm install

# Source will be mounted as volume
# COPY src/ ./src/
# COPY migrations/ ./migrations/

ENV NODE_ENV=development
ENV PORT=3000

EXPOSE 3000

CMD ["npm", "run", "dev"]

